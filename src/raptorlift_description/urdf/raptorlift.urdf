<?xml version="1.0"?>
<robot name="raptorlift">
  <!--
    Raptor Lift - Ackermann Steering Forklift

    Coordinate System (ROS Standard):
      +X = Forward (Fork side)
      +Y = Left
      +Z = Up

    Wheel Layout:
      Front (Fork side, +X) = Traction wheels (구동륜)
      Rear (Counterweight side, -X) = Steering wheels (조향륜)

    Axis Convention (ROS Standard):
      All wheels: axis xyz="0 1 0" (+Y)
      Right wheels: joint origin rpy="0 0 3.1416" (180° Z rotation)
      => This makes +velocity = forward for both sides
         while keeping TF frames properly oriented
  -->

  <!-- Materials -->
  <material name="silver">
    <color rgba="0.75 0.75 0.75 1"/>
  </material>
  <material name="wheel_color">
    <color rgba="0.2 0.2 0.2 1"/>
  </material>
  <material name="lidar_color">
    <color rgba="0.2 0.2 1 1"/>
  </material>
  <material name="camera_color">
    <color rgba="1 0 0 1"/>
  </material>

  <!-- Base Footprint (ground projection for Nav2) -->
  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.1715" rpy="0 0 0"/>
  </joint>

  <!-- Base Link (Chassis) -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <box size="1.1 0.6 0.4"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <box size="1.1 0.6 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <mass value="100.0"/>
      <inertia ixx="5.0" ixy="0.0" ixz="0.0" iyy="10.0" iyz="0.0" izz="10.0"/>
    </inertial>
  </link>

  <!-- ========== FRONT WHEELS (Traction/구동륜 - Fork Side) ========== -->

  <!-- Front Left Wheel (Traction) -->
  <link name="front_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
      <material name="wheel_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.08"/>
    </inertial>
  </link>
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel_link"/>
    <origin xyz="0.47765 0.355 -0.0705" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- Front Right Wheel (Traction) - 180° Z rotation -->
  <link name="front_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
      <material name="wheel_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.08"/>
    </inertial>
  </link>
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel_link"/>
    <origin xyz="0.47765 -0.355 -0.0705" rpy="0 0 3.1416"/>
    <axis xyz="0 -1 0"/>  <!-- 180° Z rotation 보정: 로컬 -Y = 월드 +Y -->
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- ========== REAR WHEELS (Steering/조향륜 - Counterweight Side) ========== -->

  <!-- Rear Left Steering -->
  <link name="rear_left_steering_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="rear_left_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_steering_link"/>
    <origin xyz="-0.52235 0.355 -0.0705" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.7" upper="0.7" effort="100" velocity="1.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
      <material name="wheel_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.08"/>
    </inertial>
  </link>
  <joint name="rear_left_wheel_joint" type="fixed">
    <parent link="rear_left_steering_link"/>
    <child link="rear_left_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Rear Right Steering - 180° Z rotation -->
  <link name="rear_right_steering_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="rear_right_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_steering_link"/>
    <origin xyz="-0.52235 -0.355 -0.0705" rpy="0 0 3.1416"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.7" upper="0.7" effort="100" velocity="1.0"/>
    <dynamics damping="0.5" friction="0.5"/>
  </joint>

  <!-- Rear Right Wheel -->
  <link name="rear_right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
      <material name="wheel_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1715"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.570796 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.08"/>
    </inertial>
  </link>
  <joint name="rear_right_wheel_joint" type="fixed">
    <parent link="rear_right_steering_link"/>
    <child link="rear_right_wheel_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ========== SENSORS ========== -->

  <!-- Lidar Hesai XT32-->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="lidar_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.33921 0 0.55" rpy="0 0 0"/>
  </joint>

  <!-- RSE1 LiDAR Material -->
  <material name="rslidar_color">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>

  <!-- ===== RSE1 LiDAR Front ===== -->
  <link name="lidar_rslidar_front_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.052"/>
      </geometry>
      <material name="rslidar_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.052"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0003"/>
    </inertial>
  </link>
  <joint name="lidar_rslidar_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_rslidar_front_link"/>
    <origin xyz="0.55 0.0 0.55" rpy="0 0 0"/>
  </joint>

  <!-- ===== RSE1 LiDAR Back ===== -->
  <link name="lidar_rslidar_back_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.052"/>
      </geometry>
      <material name="rslidar_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.055" radius="0.052"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0003"/>
    </inertial>
  </link>
  <joint name="lidar_rslidar_back_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_rslidar_back_link"/>
    <origin xyz="-0.55 0.0 0.55" rpy="0 0 0"/>
  </joint>

  <!-- Camera -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.1 0.05"/>
      </geometry>
      <material name="camera_color"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.55 0 0.5" rpy="0 0 0"/>
  </joint>

  <!-- Camera optical frame -->
  <link name="camera_optical_frame"/>
  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_optical_frame"/>
    <origin xyz="0 0 0" rpy="-1.570796 0 -1.570796"/>
  </joint>

  <!-- ========== ROS2_CONTROL ========== -->
  <!--
    Topic-Based Hardware Interface:
    - Publishes: /raptorlift/joint_commands (sensor_msgs/JointState)
    - Subscribes: /raptorlift/joint_states (sensor_msgs/JointState)

    Backend Options:
    1. Simulation (Isaac Sim): OmniGraph subscribes/publishes these topics
    2. Real Hardware: raptorlift_hardware_bridge converts to Modbus/Torque
  -->
  <ros2_control name="RaptorLiftSystem" type="system">
    <hardware>
      <plugin>topic_based_ros2_control/TopicBasedSystem</plugin>
      <param name="joint_commands_topic">/raptorlift/joint_commands</param>
      <param name="joint_states_topic">/raptorlift/joint_states</param>
      <param name="trigger_joint_command_threshold">0.001</param>
      <param name="sum_wrapped_joint_states">true</param>
    </hardware>

    <!-- Steering joints (Position + Velocity command) - Rear wheels -->
    <joint name="rear_left_steering_joint">
      <command_interface name="position">
        <param name="min">-0.7</param>
        <param name="max">0.7</param>
      </command_interface>
      <command_interface name="velocity">
        <param name="min">-1.0</param>
        <param name="max">1.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="rear_right_steering_joint">
      <command_interface name="position">
        <param name="min">-0.7</param>
        <param name="max">0.7</param>
      </command_interface>
      <command_interface name="velocity">
        <param name="min">-1.0</param>
        <param name="max">1.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

    <!-- Traction joints (Velocity command) - Front wheels -->
    <joint name="front_left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="front_right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-10.0</param>
        <param name="max">10.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>

  </ros2_control>

</robot>
